<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="gameGrid" alignment="center" hgap="10" stylesheets="/game/tictactoe.css" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121" fx:controller="game.Controller">
    <Label fx:id="playerXScore" text="Player X Score: " styleClass="hidden" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="1" />
    <Label fx:id="playerOScore" text="Player O Score: " styleClass="hidden" GridPane.columnIndex="4" GridPane.columnSpan="3" GridPane.rowIndex="1" />
    <Button fx:id="startGameButton" onAction="#startGame" text="Start Game" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="0" />
    <Button fx:id="newGameButton" onAction="#restartGame" styleClass="hidden" text="Play Again" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="0" />
    <Button onAction="#clickTile" styleClass="gameTile, hidden" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <Button onAction="#clickTile" styleClass="gameTile, hidden" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Button onAction="#clickTile" styleClass="gameTile, hidden" GridPane.columnIndex="2" GridPane.rowIndex="3" />
    <Button onAction="#clickTile" styleClass="gameTile, hidden" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <Button onAction="#clickTile" styleClass="gameTile, hidden" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Button onAction="#clickTile" styleClass="gameTile, hidden" GridPane.columnIndex="2" GridPane.rowIndex="4" />
    <Button onAction="#clickTile" styleClass="gameTile, hidden" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <Button onAction="#clickTile" styleClass="gameTile, hidden" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <Button onAction="#clickTile" styleClass="gameTile, hidden" GridPane.columnIndex="2" GridPane.rowIndex="5" />
    <Label fx:id="playerLabel" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="10" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
